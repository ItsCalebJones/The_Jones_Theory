<resources>

    <style name="Theme.BlogSite" parent="Base.Theme.BlogSite">
    </style>

    <style name="Theme.BlogSite_White" parent="Base.Theme.BlogSite_Accent_White">
    </style>

    <!-- Base application theme. -->
    <style name="Base.Theme.BlogSite" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/myPrimaryColor</item>
        <item name="colorPrimaryDark">@color/myPrimaryDarkColor</item>
        <item name="colorAccent">@color/myAccentColor</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <!--<item name="android:windowBackground">@color/myPrimaryColor</item>-->
        <!--<item name="windowDrawsSystemBarBackgrounds">true</item>-->
        <!-- Customize your theme here. -->
    </style>

    <!-- Base application theme. -->
    <style name="Base.Theme.BlogSite_Accent_White" parent="Base.Theme.BlogSite">
        <item name="colorAccent">#ffffff</item>
        <!--<item name="android:windowBackground">@color/myPrimaryColor</item>-->
        <!--<item name="windowDrawsSystemBarBackgrounds">true</item>-->
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ExpandedAppBarPlus" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">28.5sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>
    <style name="Theme.BlogSite.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.BlogSite.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TransparentText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#00000000</item>
    </style>

    <style name="MyEditTextTheme" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">#ffffff</item> <!-- Used for the underline when not selected -->
        <item name="colorControlActivated">#ffffff</item> <!-- Underline and floating text when active -->
        <item name="colorControlHighlight">@color/myAccentColor</item>
        <item name="android:textColorHint">#ffffff</item>
        <item name="android:textColorSecondary">#ffff</item>
    </style>

</resources>
