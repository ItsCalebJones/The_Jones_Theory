        <!--android:layout_height="fill_parent"-->
        <!--android:id="@+id/recycler_view" />-->
        <!--&lt;!&ndash;android:layout_gravity="start"&ndash;&gt;-->

    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>