<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.calebjones.blogsite">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="me.calebjones.blogsite.MainActivity"
            android:label="@string/app_name" >
            <intent-filter android:label="@string/app_name" >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="me.calebjones.blogsite.fragments.FetchView"
            android:label="@string/title_activity_fetch_data" >
        </activity>
        <activity
            android:name="me.calebjones.blogsite.activity.LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateUnchanged" >
        </activity>
        <activity
            android:name="me.calebjones.blogsite.activity.PostSelected"
            android:parentActivityName="me.calebjones.blogsite.MainActivity"
            android:theme="@style/AppTheme.TranslucentActionBar" >
            android:label="@string/title_activity_post_selected" >
        </activity>
        <activity
            android:name="me.calebjones.blogsite.activity.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:theme="@style/AppTheme"
            android:name="me.calebjones.blogsite.activity.TransitionFullscreen"
            android:parentActivityName="me.calebjones.blogsite.activity.PostSelected"/>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE"/>
</manifest>
