<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.calebjones.blogsite">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.BlogSite" >
        <activity
            android:name="me.calebjones.blogsite.MainActivity"
            android:label="@string/app_name" >
            <intent-filter android:label="@string/app_name" >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="me.calebjones.blogsite.fragments.FetchView"
            android:label="@string/title_activity_post_selected" >
        </activity>
        <activity
            android:name="me.calebjones.blogsite.activity.PostSelected"
            android:parentActivityName="me.calebjones.blogsite.MainActivity"
            android:label="@string/title_activity_post_selected" >
        </activity>
        <activity
            android:name="me.calebjones.blogsite.activity.TransitionFullscreen"
            android:parentActivityName="me.calebjones.blogsite.activity.PostSelected"/>
        <activity
            android:name="me.calebjones.blogsite.activity.Fullscreen"
            android:parentActivityName="me.calebjones.blogsite.activity.PostSelected"/>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE"/>

</manifest>
